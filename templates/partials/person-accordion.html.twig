<div class="c-accordion">
  <div class="c-accordion__main-title">
    <h2>{{ 'Background Information'|t }}</h2>
  </div>

  <div class="c-accordion__items js-accordion" data-accordion-cool-selectors="1">

    {% if content.field_kup_education | render %}
      <div class="c-accordion__item">
        <span class="js-accordion__header c-accordion__title">{{ 'Education & Training'|t }}</span>
        <div class="c-accordion__item-components js-accordion__panel">
          <div class="c-accordion__item-content">
            {{ content.field_kup_education | field_value }}
          </div>
        </div>
      </div>
    {% endif %}

    {% if content.field_kup_research_activities | render %}
      <div class="c-accordion__item">
        <span class="js-accordion__header c-accordion__title">{{ 'Research Activities'|t }}</span>
        <div class="c-accordion__item-components js-accordion__panel">
          <div class="c-accordion__item-content">
            {{ content.field_kup_research_activities | field_value }}
          </div>
        </div>
      </div>
    {% endif %}

    {% if content.field_kup_honors_awards | render %}
      <div class="c-accordion__item">
        <span class="js-accordion__header c-accordion__title">{{ 'Awards and Honors'|t }}</span>
        <div class="c-accordion__item-components js-accordion__panel">
          <div class="c-accordion__item-content">
            {{ content.field_kup_honors_awards | field_value }}
          </div>
        </div>
      </div>
    {% endif %}

  </div>
</div>
